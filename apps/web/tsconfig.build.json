{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,

    // apaga la exigencia de import type en build
    "verbatimModuleSyntax": false,

    // menos ruido de tipos de terceros
    "skipLibCheck": true
  },
  "exclude": [
    "src/pages/TestBookingUtils.tsx"
  ]
}
